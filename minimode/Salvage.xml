<?xml version="1.0" encoding="UTF-8"?>
<ISUI>
	<template name='Information.Font'>
		<Name>Segoe</Name>
		<Size>24</Size>
		<Color>FFFFFFFF</Color>
	</template>

	<window name='Tehbot_Salvage'>
		<Visible>1</Visible>
		<BackGroundColor></BackGroundColor>
		<Border>0</Border>
		<X>200</X>
		<Y>300</Y>
		<Width>1600</Width>
		<Height>1200</Height>
		<TitleBar>
			<Width>100%</Width>
			<Height>40</Height>
			<Border>0</Border>
			<BackgroundColor>FF000000</BackgroundColor>
			<Children>
				<Text name='Tehbot_Salvage_TitleBar_Title'>
					<X>0</X>
					<Y>3</Y>
					<Width>100%</Width>
					<Height>40</Height>
					<Alignment>Center</Alignment>
					<Text>Salvage Configuration</Text>
				</Text>
				<button	Name='Close'>
					<X>r80</X>
					<Y>0</Y>
					<Width>80</Width>
					<Height>40</Height>
					<Text>Close</Text>
					<OnLeftClick>
						ui -unload "&filepath;/Salvage"
					</OnLeftClick>
				</button>
			</Children>
		</TitleBar>
		<Children>
			<Frame name="SalvageFrame">
				<X>0</X>
				<Y>30</Y>
				<Width>100%</Width>
				<Height>100%</Height>
				<BackgroundColor>FF000000</BackgroundColor>
				<Border>1</Border>
				<BorderColor>FFFFFFFF</BorderColor>
				<Children>

					<Text name='LockCountLabel'>
						<X>1%</X>
						<Y>65%</Y>
						<Width>30%</Width>
						<Height>3%</Height>
						<Text>Use ${Script[Tehbot].VariableScope.Salvage.Config.LockCount} Locks</Text>
					</Text>
					<Slider name='LockCount'>
						<X>70%</X>
						<Y>65%</Y>
						<Width>20%</Width>
						<Height>3%</Height>
						<Border>1</Border>
						<Range>10</Range>
						<OnLoad>
							This:SetValue[${Script[Tehbot].VariableScope.Salvage.Config.LockCount}]
						</OnLoad>
						<OnChange>
							Script[Tehbot].VariableScope.Salvage.Config:SetLockCount[${This.Value}]
						</OnChange>
					</Slider>
				</Children>
			</Frame>
		</Children>
	</window>

</ISUI>
